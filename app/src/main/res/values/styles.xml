<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextAppearance.Widget.Coordinates" parent="Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shape_rectangle_grey_border</item>
        <item name="android:layout_margin">2.5dp</item>
        <item name="android:padding">@dimen/widget_base_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/widget_text_size</item>
    </style>
</resources>
